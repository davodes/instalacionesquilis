<section class="py-16 lg:py-24 bg-primary-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Contact Information -->
      <div class="text-white">
        <h2 class="text-3xl lg:text-4xl font-bold mb-8">
          ¿Necesitas nuestros servicios?
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Contacta con nosotros para un presupuesto personalizado y sin compromiso
        </p>
        
        <div class="space-y-6">
          <!-- Phone -->
          <div class="flex items-center gap-4">
            <div class="glass w-12 h-12 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
            </div>
            <div>
              <p class="text-primary-200 text-sm">Teléfono</p>
              <a href="tel:+34916474896" class="text-white text-lg font-semibold hover:text-accent-400 transition-colors">
                916 474 896
              </a>
            </div>
          </div>
          
          <!-- Email -->
          <div class="flex items-center gap-4">
            <div class="glass w-12 h-12 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
              </svg>
            </div>
            <div>
              <p class="text-primary-200 text-sm">Email</p>
              <a href="mailto:info@instalacionesquilis.com" class="text-white text-lg font-semibold hover:text-accent-400 transition-colors">
                info@instalacionesquilis.com
              </a>
            </div>
          </div>
          
          <!-- Address -->
          <div class="flex items-center gap-4">
            <div class="glass w-12 h-12 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <p class="text-primary-200 text-sm">Ubicación</p>
              <p class="text-white text-lg font-semibold">Madrid, España</p>
            </div>
          </div>
          
          <!-- Schedule -->
          <div class="flex items-center gap-4">
            <div class="glass w-12 h-12 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-accent-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <p class="text-primary-200 text-sm">Horario</p>
              <p class="text-white text-lg font-semibold">Lun - Vie: 8:00 - 19:00</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form -->
      <div class="glass p-8 rounded-2xl">
        <h3 class="text-2xl font-bold text-white mb-6">Solicita información</h3>
        <form class="space-y-6" action="https://formspree.io/f/your-form-id" method="POST">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-primary-100 mb-2">
                Nombre
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-primary-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors"
                placeholder="Tu nombre"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-primary-100 mb-2">
                Teléfono
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-primary-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors"
                placeholder="Tu teléfono"
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-primary-100 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-primary-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors"
              placeholder="tu@email.com"
            />
          </div>
          
          <div>
            <label for="service" class="block text-sm font-medium text-primary-100 mb-2">
              Servicio de interés
            </label>
            <select
              id="service"
              name="service"
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors"
            >
              <option value="">Selecciona un servicio</option>
              <option value="aire-acondicionado">Aire Acondicionado</option>
              <option value="electricidad">Electricidad</option>
              <option value="iluminacion">Iluminación</option>
              <option value="horicultura-tecnica">Horticultura Técnica</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-primary-100 mb-2">
              Mensaje
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-primary-300 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent transition-colors resize-none"
              placeholder="Cuéntanos sobre tu proyecto..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full bg-accent-500 hover:bg-accent-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200"
          >
            Enviar mensaje
          </button>
        </form>
      </div>
    </div>
  </div>
</section>